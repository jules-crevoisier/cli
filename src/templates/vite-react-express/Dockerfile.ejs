# Multi-stage production build for Vite + React + Express
# Usage: docker build -t <%= projectName %> . && docker run -p 4000:4000 <%= projectName %>

# --- Stage 1: Build client ---
FROM node:<%= versions.node %>-alpine AS client-builder
WORKDIR /app/client
COPY client/package.json client/package-lock.json* ./
RUN npm ci
COPY client/ .
RUN npm run build

# --- Stage 2: Build server ---
FROM node:<%= versions.node %>-alpine AS server-builder
WORKDIR /app/server
COPY server/package.json server/package-lock.json* ./
<% if (typescript) { %>COPY server/tsconfig.json ./
<% } %>RUN npm ci
COPY server/ .
<% if (orm === 'prisma') { %>RUN npx prisma generate
<% } %><% if (typescript) { %>RUN npm run build
<% } %>

# --- Stage 3: Production ---
FROM node:<%= versions.node %>-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy server production dependencies
COPY server/package.json server/package-lock.json* ./
RUN npm ci --omit=dev

# Copy built server
<% if (typescript) { %>COPY --from=server-builder /app/server/dist ./dist
<% } else { %>COPY --from=server-builder /app/server/src ./src
<% } %><% if (orm === 'prisma') { %>COPY --from=server-builder /app/server/node_modules/.prisma ./node_modules/.prisma
COPY --from=server-builder /app/server/prisma ./prisma
<% } %>

# Copy built client static files
COPY --from=client-builder /app/client/dist ./public

EXPOSE 4000

CMD ["node", "<%= typescript ? 'dist/index.js' : 'src/index.js' %>"]
