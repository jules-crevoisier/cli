"use client";

import { useEffect, useState } from "react";

export default function ApiDocsPage() {
  const [spec, setSpec] = useState<object | null>(null);

  useEffect(() => {
    import("@/lib/swagger").then(({ getApiSpec }) => setSpec(getApiSpec()));
  }, []);

  return (
    <div className="min-h-screen bg-white p-8 dark:bg-gray-950">
      <h1 className="mb-4 text-2xl font-bold">API Documentation</h1>
      {spec ? (
        <pre className="overflow-auto rounded-lg bg-gray-100 p-4 text-sm dark:bg-gray-800">
          {JSON.stringify(spec, null, 2)}
        </pre>
      ) : (
        <p>Loading...</p>
      )}
    </div>
  );
}
