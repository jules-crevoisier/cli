name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
<% if (stack === 'vite-react-express') { %>
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: npm
      - name: Install root dependencies
        run: npm ci
      - name: Install client dependencies
        run: npm --prefix client ci
      - name: Install server dependencies
        run: npm --prefix server ci
<% if (eslintPrettier) { %>
      - name: Lint
        run: npm run lint
<% } %>
<% if (typescript) { %>
      - name: Typecheck client
        run: cd client && npx tsc --noEmit
      - name: Typecheck server
        run: cd server && npx tsc --noEmit
<% } %>
      - name: Build client
        run: npm --prefix client run build
      - name: Build server
        run: npm --prefix server run build
      - name: Test server
        run: npm --prefix server run test
<% } else if (['nextjs', 'vite-react', 'nuxt', 'express'].includes(stack)) { %>
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: npm
      - run: npm ci
<% if (eslintPrettier) { %>
      - name: Lint
        run: npm run lint
<% } %>
<% if (typescript) { %>
      - name: Typecheck
        run: npx tsc --noEmit
<% } %>
<% if (stack === 'express') { %>
      - name: Test
        run: npm run test
<% } %>
      - name: Build
        run: npm run build
<% } else if (stack === 'symfony') { %>
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: shivammathur/setup-php@v2
        with:
          php-version: '8.3'
          tools: composer
      - run: composer install --no-interaction --prefer-dist
      - name: Lint
        run: php vendor/bin/phpstan analyse src --level=5 || true
<% } else if (stack === 'laravel') { %>
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: shivammathur/setup-php@v2
        with:
          php-version: '8.3'
          tools: composer
      - run: composer install --no-interaction --prefer-dist
      - name: Generate key
        run: php artisan key:generate || true
      - name: Test
        run: php artisan test || true
<% } %>
