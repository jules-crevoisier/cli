<template>
  <div class="items-page">
    <div class="items-header">
      <h1>Items</h1>
      <button class="btn-primary" @click="showCreateModal = true">
        + New Item
      </button>
    </div>

    <div v-if="pending" class="loading">Loading items...</div>

    <div v-else-if="error" class="error">
      Failed to load items. <button @click="refresh()">Retry</button>
    </div>

    <div v-else>
      <table v-if="data?.items?.length" class="items-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr v-for="item in data.items" :key="item.id">
            <td>{{ item.title }}</td>
            <td>{{ item.description || '-' }}</td>
            <td>{{ new Date(item.createdAt).toLocaleDateString() }}</td>
            <td class="actions">
              <button class="btn-sm" @click="editItem(item)">Edit</button>
              <button class="btn-sm btn-danger" @click="handleDelete(item.id)">
                Delete
              </button>
            </td>
          </tr>
        </tbody>
      </table>

      <p v-else class="empty">No items found. Create one to get started.</p>
    </div>

    <!-- Create / Edit Modal -->
    <div v-if="showCreateModal || editingItem" class="modal-overlay" @click.self="closeModal">
      <div class="modal">
        <h2>{{ editingItem ? 'Edit Item' : 'Create Item' }}</h2>
        <form @submit.prevent="editingItem ? handleUpdate() : handleCreate()">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              id="title"
              v-model="form.title"
              type="text"
              placeholder="Item title"
              required
            />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="description"
              v-model="form.description"
              placeholder="Item description (optional)"
              rows="3"
            />
          </div>
          <div class="modal-actions">
            <button type="button" class="btn-secondary" @click="closeModal">
              Cancel
            </button>
            <button type="submit" class="btn-primary">
              {{ editingItem ? 'Update' : 'Create' }}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
interface Item {
  id: string
  title: string
  description: string | null
  createdAt: string
}

const { data, pending, error, refresh } = await useFetch<{
  items: Item[]
  meta: { total: number; page: number; limit: number; totalPages: number }
}>('/api/items')

const showCreateModal = ref(false)
const editingItem = ref<Item | null>(null)
const form = reactive({
  title: '',
  description: '',
})

function editItem(item: Item) {
  editingItem.value = item
  form.title = item.title
  form.description = item.description || ''
}

function closeModal() {
  showCreateModal.value = false
  editingItem.value = null
  form.title = ''
  form.description = ''
}

async function handleCreate() {
  await $fetch('/api/items', {
    method: 'POST',
    body: { title: form.title, description: form.description || null },
  })
  closeModal()
  await refresh()
}

async function handleUpdate() {
  if (!editingItem.value) return

  await $fetch(`/api/items/${editingItem.value.id}`, {
    method: 'PUT',
    body: { title: form.title, description: form.description || null },
  })
  closeModal()
  await refresh()
}

async function handleDelete(id: string) {
  if (!confirm('Are you sure you want to delete this item?')) return

  await $fetch(`/api/items/${id}`, { method: 'DELETE' })
  await refresh()
}
</script>

