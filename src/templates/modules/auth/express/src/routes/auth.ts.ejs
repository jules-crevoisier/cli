import { Router } from "express";
import { hashPassword, verifyPassword<% if (authStrategy === 'jwt') { %>, signToken<% } %> } from "../lib/auth.js";
<% if (authStrategy === 'jwt') { %>
import { requireAuth } from "../middleware/auth.js";
<% } %>

export const authRouter = Router();

// In-memory store for demo — replace with your database
const users: Array<{ id: string; email: string; password: string; name: string; role: string }> = [];

// POST /api/auth/register
authRouter.post("/register", async (req, res) => {
  try {
    const { email, password, name } = req.body;

    if (!email || !password) {
      return res.status(400).json({ error: "Email and password are required" });
    }

    if (users.find((u) => u.email === email)) {
      return res.status(409).json({ error: "Email already registered" });
    }

    const hashedPassword = await hashPassword(password);
    const user = {
      id: String(users.length + 1),
      email,
      password: hashedPassword,
      name: name || "",
      role: "user",
    };
    users.push(user);

<% if (authStrategy === 'jwt') { %>
    const token = signToken({ userId: user.id, email: user.email, role: user.role });
    return res.status(201).json({ user: { id: user.id, email: user.email, name: user.name, role: user.role }, token });
<% } else { %>
    (req.session as any).user = { id: user.id, email: user.email, name: user.name, role: user.role };
    return res.status(201).json({ user: { id: user.id, email: user.email, name: user.name, role: user.role } });
<% } %>
  } catch (err) {
    return res.status(500).json({ error: "Registration failed" });
  }
});

// POST /api/auth/login
authRouter.post("/login", async (req, res) => {
  try {
    const { email, password } = req.body;

    if (!email || !password) {
      return res.status(400).json({ error: "Email and password are required" });
    }

    const user = users.find((u) => u.email === email);
    if (!user) {
      return res.status(401).json({ error: "Invalid credentials" });
    }

    const valid = await verifyPassword(password, user.password);
    if (!valid) {
      return res.status(401).json({ error: "Invalid credentials" });
    }

<% if (authStrategy === 'jwt') { %>
    const token = signToken({ userId: user.id, email: user.email, role: user.role });
    return res.json({ user: { id: user.id, email: user.email, name: user.name, role: user.role }, token });
<% } else { %>
    (req.session as any).user = { id: user.id, email: user.email, name: user.name, role: user.role };
    return res.json({ user: { id: user.id, email: user.email, name: user.name, role: user.role } });
<% } %>
  } catch (err) {
    return res.status(500).json({ error: "Login failed" });
  }
});

// POST /api/auth/logout
authRouter.post("/logout", (req, res) => {
<% if (authStrategy === 'jwt') { %>
  // JWT is stateless — client should discard the token
  return res.json({ message: "Logged out" });
<% } else { %>
  req.session.destroy((err) => {
    if (err) return res.status(500).json({ error: "Logout failed" });
    res.clearCookie("connect.sid");
    return res.json({ message: "Logged out" });
  });
<% } %>
});

// GET /api/auth/me
authRouter.get("/me", <% if (authStrategy === 'jwt') { %>requireAuth, <% } %>(req, res) => {
<% if (authStrategy === 'jwt') { %>
  const payload = (req as any).user;
  const user = users.find((u) => u.id === payload.userId);
  if (!user) return res.status(404).json({ error: "User not found" });
  return res.json({ id: user.id, email: user.email, name: user.name, role: user.role });
<% } else { %>
  const sessionUser = (req.session as any)?.user;
  if (!sessionUser) return res.status(401).json({ error: "Not authenticated" });
  return res.json(sessionUser);
<% } %>
});
